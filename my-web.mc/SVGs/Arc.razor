
<svg viewBox="0 0 32 32" height=@Height>
    <circle class='stroke-dark' cx=@Cx cy=@Cy r=@R fill='none' stroke-width=@StrokeWidth />
    <circle class='stroke-accent' cx=@Cx cy=@Cy r=@R fill='none' stroke-width=@StrokeWidth stroke-dashoffset=@Offset stroke-dasharray="@DashArray" />
</svg>

@code {
    [Parameter]
    public double Percent { get; set; }

    [Parameter]
    public double Height { get; set; }

    const int R = 14;
    const int Cx = 16;
    const int Cy = 16;
    const int StrokeWidth = 2;
    const double C = 2 * Math.PI * R;
    const double Offset = C * (1.0 / 4);
    double Dash => C * Percent;
    string DashArray => $"{Dash}, {C - Dash}";
}